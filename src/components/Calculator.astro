---
interface Props {
  bcvRate: number | null;
  binanceRate: number | null;
}

const { bcvRate, binanceRate } = Astro.props;
---

<section
  id="calc"
  class="w-full max-w-md mx-auto px-1 sm:px-0"
  data-bcv={bcvRate ?? ''}
  data-bin={binanceRate ?? ''}
>
  <h2 class="text-base sm:text-lg font-bold text-center mb-3 sm:mb-4 text-slate-300">Calculadora</h2>

  <!-- Currency toggle -->
  <div class="flex justify-center mb-4">
    <button
      id="btn-usd"
      type="button"
      class="px-4 py-1.5 text-sm font-semibold rounded-l-lg border border-slate-700 transition-colors bg-emerald-500/15 text-emerald-400 border-emerald-500/40"
    >
      $ &rarr; Bs
    </button>
    <button
      id="btn-bs"
      type="button"
      class="px-4 py-1.5 text-sm font-semibold rounded-r-lg border border-l-0 border-slate-700 transition-colors text-slate-400 bg-slate-800/60"
    >
      Bs &rarr; $
    </button>
  </div>

  <!-- Input -->
  <div class="relative mb-5">
    <span
      id="input-symbol"
      class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 font-semibold select-none"
    >$</span>
    <input
      id="calc-input"
      type="text"
      inputmode="decimal"
      autocomplete="off"
      maxlength="19"
      placeholder="0.00"
      class="w-full rounded-xl border border-slate-700 bg-slate-900/80 text-slate-100 text-xl font-semibold pl-10 pr-4 py-3 outline-none focus:border-emerald-500/50 focus:ring-1 focus:ring-emerald-500/25 transition-colors placeholder:text-slate-600"
    />
  </div>

  <!-- Results -->
  <div class="grid grid-cols-2 gap-2 sm:gap-3">
    <div class="rounded-xl border border-emerald-500/20 bg-slate-900/50 p-3 sm:p-4 text-center">
      <p class="text-[10px] sm:text-[11px] uppercase tracking-widest text-slate-500 mb-1">BCV</p>
      <p id="res-bcv" class="text-lg sm:text-xl font-bold text-emerald-400 tabular-nums truncate">—</p>
    </div>
    <div class="rounded-xl border border-amber-500/20 bg-slate-900/50 p-3 sm:p-4 text-center">
      <p class="text-[10px] sm:text-[11px] uppercase tracking-widest text-slate-500 mb-1">Binance P2P</p>
      <p id="res-bin" class="text-lg sm:text-xl font-bold text-amber-400 tabular-nums truncate">—</p>
    </div>
  </div>
</section>

<script>
  const $ = (s: string) => document.querySelector(s)!;
  const el = {
    calc: $('#calc') as HTMLElement,
    input: $('#calc-input') as HTMLInputElement,
    symbol: $('#input-symbol') as HTMLElement,
    btnUsd: $('#btn-usd') as HTMLButtonElement,
    btnBs: $('#btn-bs') as HTMLButtonElement,
    resBcv: $('#res-bcv') as HTMLElement,
    resBin: $('#res-bin') as HTMLElement,
  };

  // Read rates live from data-* so client-side fallback patches are picked up
  function rates() {
    const b = el.calc.dataset.bcv;
    const n = el.calc.dataset.bin;
    return {
      bcv: b ? parseFloat(b) : NaN,
      bin: n ? parseFloat(n) : NaN,
    };
  }

  let mode: 'usd' | 'bs' = 'usd';

  const fmt = (n: number, decimals = 2) =>
    n.toLocaleString('es-VE', {
      minimumFractionDigits: decimals,
      maximumFractionDigits: decimals,
    });

  const activeBtn = 'bg-emerald-500/15 text-emerald-400 border-emerald-500/40';
  const inactiveBtn = 'text-slate-400 bg-slate-800/60';

  function setMode(m: 'usd' | 'bs') {
    mode = m;
    if (m === 'usd') {
      el.symbol.textContent = '$';
      el.input.placeholder = '0.00';
      el.btnUsd.className = `px-4 py-1.5 text-sm font-semibold rounded-l-lg border border-slate-700 transition-colors ${activeBtn}`;
      el.btnBs.className = `px-4 py-1.5 text-sm font-semibold rounded-r-lg border border-l-0 border-slate-700 transition-colors ${inactiveBtn}`;
    } else {
      el.symbol.textContent = 'Bs';
      el.input.placeholder = '0,00';
      el.btnBs.className = `px-4 py-1.5 text-sm font-semibold rounded-r-lg border border-l-0 border-slate-700 transition-colors ${activeBtn}`;
      el.btnUsd.className = `px-4 py-1.5 text-sm font-semibold rounded-l-lg border border-slate-700 transition-colors ${inactiveBtn}`;
    }
    compute();
  }

  const MAX_VALUE = 999_999_999; // cap input to avoid floating-point issues

  function formatWithThousands(value: string): string {
    // Split into integer and decimal parts (comma is decimal separator)
    const parts = value.split(',');
    let intPart = parts[0].replace(/\./g, ''); // remove existing thousand seps
    // Add thousand separators (dots)
    intPart = intPart.replace(/\B(?=(\d{3})+(?!\d))/g, '.');
    return parts.length > 1 ? `${intPart},${parts[1]}` : intPart;
  }

  function sanitizeInput() {
    const cursor = el.input.selectionStart ?? 0;
    const oldVal = el.input.value;
    // Allow only digits, dots (thousand sep) and comma (decimal sep)
    let clean = oldVal.replace(/[^\d.,]/g, '');
    // Ensure only one comma (decimal separator)
    const commaIdx = clean.indexOf(',');
    if (commaIdx !== -1) {
      clean = clean.slice(0, commaIdx + 1) + clean.slice(commaIdx + 1).replace(/,/g, '');
    }
    // Count dots before cursor in old value (to adjust cursor after reformatting)
    const dotsBefore = (oldVal.slice(0, cursor).match(/\./g) || []).length;
    const formatted = formatWithThousands(clean);
    if (formatted !== oldVal) {
      el.input.value = formatted;
      // Adjust cursor: account for change in number of dots
      const dotsBeforeNew = (formatted.slice(0, cursor).match(/\./g) || []).length;
      const newCursor = cursor + (dotsBeforeNew - dotsBefore);
      el.input.selectionStart = el.input.selectionEnd = Math.max(0, newCursor);
    }
  }

  function compute() {
    sanitizeInput();
    const { bcv, bin } = rates();
    const raw = el.input.value.replace(/\./g, '').replace(',', '.');
    const v = parseFloat(raw);
    if (!v || v <= 0 || !isFinite(v)) {
      el.resBcv.textContent = '—';
      el.resBin.textContent = '—';
      return;
    }
    const capped = Math.min(v, MAX_VALUE);
    if (mode === 'usd') {
      el.resBcv.textContent = isNaN(bcv) ? 'N/D' : `Bs ${fmt(capped * bcv)}`;
      el.resBin.textContent = isNaN(bin) ? 'N/D' : `Bs ${fmt(capped * bin)}`;
    } else {
      el.resBcv.textContent = isNaN(bcv) ? 'N/D' : `$ ${fmt(capped / bcv)}`;
      el.resBin.textContent = isNaN(bin) ? 'N/D' : `$ ${fmt(capped / bin)}`;
    }
  }

  el.input.addEventListener('input', compute);
  el.btnUsd.addEventListener('click', () => setMode('usd'));
  el.btnBs.addEventListener('click', () => setMode('bs'));
</script>
